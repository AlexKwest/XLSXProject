    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btnOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuOpen}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btnCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuClose}"/>
        </EventTrigger>
    </Window.Triggers>


    
    <Grid Background="LightGray">
        <Grid Height="60" VerticalAlignment="Top" Background="#FF4A90C1" MouseLeftButtonDown="Window_MouseLeftButtonDown" Grid.ColumnSpan="2">
            <TextBlock FontFamily="./#Caveat-Bold" Text="Расчёт Зарплаты" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Grid.Column="1" Margin="5" Height="34" Width="190"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal" Grid.Column="1" Margin="0,7" Height="46" Width="162">
                <TextBlock Text="Настройки" FontSize="22" VerticalAlignment="Center"/>
                <materialDesign:PopupBox  Margin="10" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                    <StackPanel Width="150">
                        <Button Content="Список"/>
                        <Button Content="Помощь"/>
                        <Separator/>
                        <Button x:Name="btnExit" Content="Выход" Click="btnExit_Click" />
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0" Margin="0,60,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="1" DataContext="{Binding}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <ListBox Name="lstOperator" ItemsSource="{Binding}" Grid.Column="0" Grid.RowSpan="2" Visibility="Collapsed"  Width="200"  HorizontalAlignment="left" >
                </ListBox>
                <!--<Grid DataContext="{Binding ElementName=lstOperator, Path=SelectedItem}">
                <StackPanel>
                <StackPanel>
                <TextBlock Foreground="Black" Text="{Binding Bonus15}"></TextBlock>
                </StackPanel>
                </StackPanel>
                </Grid>-->
                <Grid Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" Height="138" DataContext="{Binding ElementName=lstOperator, Path=SelectedItem}">
                    <Rectangle  Height="120" Margin="3" Fill="White" RadiusY="10" RadiusX="10">
                        <Rectangle.Effect>
                            <DropShadowEffect BlurRadius="50" RenderingBias="Quality" ShadowDepth="7" Opacity="0.4"/>
                        </Rectangle.Effect>
                    </Rectangle>
                    <Grid Margin="0,9,3,9" Height="120">
                        <Grid Width="50" Background="#FFDAA024" Height="71" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="23,0,0,49">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="20" Color="#FFDEDCDC" RenderingBias="Quality" ShadowDepth="1"/>
                            </Grid.Effect>
                            <materialDesign:PackIcon Kind="Cash100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White" Margin="3 0" Width="44" Height="44"/>
                        </Grid>
                        <TextBlock  FontWeight="Bold" Text="Сумма за первую часть" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="Gray" FontFamily="Times new Roman" Margin="5"></TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">
                            <TextBlock Text="{Binding Summa}"   Foreground="Gray" FontFamily="Elephant" FontSize="40" Margin="1"></TextBlock>
                            <TextBlock Text="руб"  Foreground="Gray" FontFamily="Adobe Caslon Pro Bold" FontSize="20" Margin="5 0 0 0" VerticalAlignment="Center" ></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="5">
                            <StackPanel Orientation="Horizontal" Width="110">
                                <materialDesign:PackIcon Kind="Wallet" Foreground="Gray" Width="20" Margin="0 0" Height="20" VerticalAlignment="Center"></materialDesign:PackIcon>
                                <TextBlock FontWeight="Bold" FontSize="15" Text="Бонус:" Foreground="#FFDAA024" Margin="5 0" VerticalAlignment="Center"> </TextBlock>
                                <TextBlock   FontSize="15" Name="txtBonus" Foreground="Gray" Text="{Binding Bonus15}" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0 0 20 0" TextDecorations="Underline" FontFamily="Showcard Gothic"></TextBlock>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="WalletTravel" Foreground="Gray" Width="20" Margin="5 0" Height="20" VerticalAlignment="Center" HorizontalAlignment="Right"></materialDesign:PackIcon>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontWeight="Bold" FontSize="11" Text="Пройдено:" Foreground="#FFDAA024" Margin="0 0" HorizontalAlignment="Right"></TextBlock>
                                    <TextBlock FontWeight="Bold" FontSize="11" Text="Бонусы (руб):" Foreground="#FFDAA024" Margin="0 0" HorizontalAlignment="Right"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock  FontWeight="Bold" FontSize="11" Name="txtProideno15" Foreground="Gray" Text="{Binding Proideno15}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="6 0 0 0"></TextBlock>
                                    <TextBlock  FontWeight="Bold" FontSize="11" Name="txtBonusSumma" Foreground="Gray" Text="{Binding BonusDyas15}"  VerticalAlignment="Center" HorizontalAlignment="Right" Margin="6 0 0 0"></TextBlock>
                                </StackPanel>

                            </StackPanel>
                        </StackPanel>
                    </Grid>

                </Grid>

            </Grid>

        </Grid>



        <Grid x:Name="GridMenu" Width="60" HorizontalAlignment="Left" Background="#FF002C78" Grid.RowSpan="2">
            <StackPanel>
                <Grid Background="#FFFFFF" Height="60">
                    <Button x:Name="btnCloseMenu" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Right" Visibility="Collapsed" Click="btnCloseMenu_Click">
                        <materialDesign:PackIcon Foreground="#FF002C78" Kind="ArrowLeft"  Width="25" Height="25"/>
                    </Button>
                    <Button x:Name="btnOpenMenu" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Right" Visibility="Visible" Click="btnOpenMenu_Click">
                        <materialDesign:PackIcon Foreground="#FF002C78" Kind="Menu" Width="25" Height="25"/>
                    </Button>
                </Grid>
                <Grid Height="100">

                </Grid>
                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#FF4A90C1">
                    <ListViewItem Height="60" MouseLeftButtonUp="submit_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon  Kind="FolderDownload" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBlock Text="Загрузить отчёт" VerticalAlignment="Center" Margin="20 10"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#FF4A90C1">
                    <ListViewItem Height="60" MouseLeftButtonUp="btnUploadFirstFile_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBlock Text="Сохранить зарплату" VerticalAlignment="Center" Margin="20 10"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#FF4A90C1">
                    <ListViewItem Height="60" MouseLeftButtonUp="SwitchShowOperators" Background="#FF002C78">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBlock Text="Операторы" VerticalAlignment="Center" Margin="20 10"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#FF4A90C1">
                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartArc" Margin="10" Width="25" Height="25" VerticalAlignment="Center"></materialDesign:PackIcon>
                            <TextBlock Text="Статистика" VerticalAlignment="Center" Margin="20 10"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
